---
interface Props {
  text: string;
}
const { text } = Astro.props;
---

<li
  class="transition-colors duration-500 flex justify-center items-center font-bold text-lg pt-3 pr-5 pb-3 pl-5 cursor-pointer hover:border-b border-b-black dark:hover:border-b dark:border-b-white text-black dark:text-white"
>
  {text}
</li>
