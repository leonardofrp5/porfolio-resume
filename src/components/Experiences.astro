---
const experiences = [
  {
    role: "Frontend Developer",
    company: "Company Name",
    period: "Jan 2023 - Present",
    description: "Building modern, high-performance web applications with React, Astro, and Tailwind CSS. Focused on delivering seamless user experiences.",
  },
  {
    role: "Web Developer",
    company: "Previous Company",
    period: "Jun 2021 - Dec 2022",
    description: "Developed and optimized interfaces, ensuring responsiveness and accessibility. Worked closely with designers and backend teams.",
  },
];
---

<section class="w-full min-h-[60vh] flex flex-col items-center gap-12 px-6 md:px-10 lg:px-20">
  <h2 class="text-4xl font-bold text-black dark:text-white relative inline-block after:content-[''] after:w-16 after:h-1 after:bg-blue-500 after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2">
    Experience
  </h2>
  
  <div class="w-full max-w-4xl space-y-8">
    {experiences.map(({ role, company, period, description }) => (
      <div class="relative p-6 border-l-4 border-blue-500 bg-white dark:bg-gray-800 shadow-lg rounded-xl">
        <span class="absolute -left-3 top-6 w-6 h-6 bg-blue-500 rounded-full border-4 border-white dark:border-gray-800"></span>
        <h3 class="text-2xl font-semibold text-black dark:text-white">{role} <span class="text-blue-500">@ {company}</span></h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">{period}</p>
        <p class="mt-3 text-black dark:text-gray-300">{description}</p>
      </div>
    ))}
  </div>
</section>
