---
import { Code, Terminal, Atom, Flame, Server, Network, PaintBucket, GitBranch } from "lucide-astro";
---

<section class="w-full flex flex-col items-center px-6 md:px-10 lg:px-20 mt-20 relative">
  <h2 class="text-4xl font-bold text-black dark:text-white relative inline-block after:content-[''] after:w-16 after:h-1 after:bg-verdigris after:absolute after:top-10 after:left-1/2 after:-translate-x-1/2">
    Skills
  </h2>

  <div class="relative w-full max-w-6xl mt-12 grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-7 gap-6 place-items-center">
    {[
      { name: "JavaScript", icon: Code },
      { name: "TypeScript", icon: Terminal },
      { name: "React", icon: Atom },
      { name: "Next.js", icon: Flame },
      { name: "Node.js", icon: Server },
      { name: "GraphQL", icon: Network },
      { name: "Tailwind CSS", icon: PaintBucket },
      { name: "Git & GitHub", icon: GitBranch },
    ].map(({ name, icon: Icon }) => (
      <div class="relative bg-white/10 dark:bg-gray-900/20 backdrop-blur-lg border border-white/20 dark:border-gray-700 shadow-lg rounded-xl p-4 transition-all duration-300 hover:shadow-2xl hover:scale-[1.05] hover:border-verdigris group min-w-[120px] w-[150px] h-[100px] flex flex-col items-center justify-center">
        <div class="absolute inset-0 bg-gradient-to-br from-transparent to-verdigris opacity-0 group-hover:opacity-10 transition-opacity duration-500 rounded-xl"></div>
        <Icon class="w-8 h-8 text-black dark:text-white opacity-60 group-hover:opacity-100 transition-opacity duration-300" />
        <p class="text-md font-semibold text-black dark:text-white opacity-60 group-hover:opacity-100 transition-opacity duration-300 mt-1">{name}</p>
      </div>
    ))}
  </div>
</section>
