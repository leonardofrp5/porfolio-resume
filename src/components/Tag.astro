---
interface Props {
  text: string;
  borderRadius?: string;
  width?: string;
  height?: string;
  fontSize?: string;
  fontWeight?: string;
}
const { text, borderRadius, width, height, fontSize, fontWeight } = Astro.props;
---

<span
  class=`flex items-center transition duration-1000 flex justify-center ${width} ${height} bg-verdigris text-white font-${fontWeight} text-${fontSize} ${borderRadius}`
  >{text}</span
>
